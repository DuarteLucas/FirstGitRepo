@model IEnumerable<LoginWithAuthenticationTest.Models.CompanyOffer>

@{
    ViewBag.Title = "List of Results";
}

<h2>ResultCompany</h2>

<h4>
    @Html.ActionLink("Back to Search", "SearchOffers", "SearchOffers")
</h4>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Company.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Location)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Language.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Price) <p>(€/ per hour)</p> 
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Description)
        </th>
       <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Company.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Location)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Language.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Price)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Description)
        </td>
        
        <th>
            <a href="mailto:@item.Company.Email?Subject=Codeplace%20job%20application" target="_top">Apply</a>
        </th>
        
    </tr>
}

</table>
