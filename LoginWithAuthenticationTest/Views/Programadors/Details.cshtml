@model LoginWithAuthenticationTest.Models.Programador

@{
    ViewBag.Title = "Details";
}

<h2>Details</h2>

<div class="container-fluid">

    <div class="col-sm-12">
        <div class="panel panel-default user-info">
            <div class="panel-body clearfix">
                <div class="pull-left profile-avatar">
                    <div class="thumbnail">
                        @Html.DisplayFor(model => model.Foto)
                        <img src="http://placehold.it/125x125&text=x">
                    </div>
                </div>
                <div class="pull-left profile-data">
                    <div class="name">
                        <h2>@Html.DisplayFor(model => model.FirstName) @Html.DisplayFor(model => model.LastName)</h2>
                    </div>
                    <div class="contact-data">
                        <ul class="list-unstyled">
                            <li><strong>@Html.DisplayNameFor(model => model.Category):      </strong>@Html.DisplayFor(model => model.Category)</li>
                            <li><strong>@Html.DisplayNameFor(model => model.Email):         </strong>@Html.DisplayFor(model => model.Email)</li>
                            <li><strong>@Html.DisplayNameFor(model => model.PhoneNumber):   </strong>@Html.DisplayFor(model => model.PhoneNumber)</li>
                            <li><strong>@Html.DisplayNameFor(model => model.Age):           </strong>@Html.DisplayFor(model => model.Age) anos</li>
                            <li><strong>@Html.DisplayNameFor(model => model.Location):      </strong>@Html.DisplayFor(model => model.Location) </li>
                            <li><strong>@Html.DisplayNameFor(model => model.Price_hour):    </strong>@Html.DisplayFor(model => model.Price_hour) EUR/hr</li>
                        </ul>
                    </div>
                </div>
                <button class="button">GUARDAR NOS FAVORITOS</button>
                <button class="button button2">CONTACTAR CANDIDATO</button>
            </div>
        </div>

        <div class="panel panel-default user-notes">
            <div class="panel-heading">
                <h3 class="panel-title">@Html.DisplayNameFor(model => model.Description)
</h3>
            </div>
            <div class="panel-body">
                <ul>
                    <li>@Html.DisplayFor(model => model.Description)</li>
                </ul>
            </div>
        </div>
        <div class="panel panel-default user-files">
            <div class="panel-heading">
                <h3 class="panel-title">@Html.DisplayNameFor(model => model.Certificates)</h3>
            </div>
            <div class="panel-body">
                <ul class="list-inline">
                    <li>
                        <a class="thumbnail" href="/" title="this_filename.jpg">
                            <i class="fa fa-3x fa-file-o" aria-hidden="true"></i>
                            <small class="file-name">@Html.DisplayFor(model => model.Certificates)</small>
                        </a>
                    </li>

                </ul>
            </div>
        </div>

        <div class="panel panel-default user-notes">
            <div class="panel-heading">
                <h3 class="panel-title">Links</h3>
            </div>
            <div class="social__container">

                <!-- social__item linkedin -->
                <div class="social__item">
                    <a target="_blank" href="https://www.linkedin.com/pub/steven-roberts/7a/707/409" class="social__icon--linkedin"><i class="icon--linkedin"></i></a>
                </div>
                <!-- /social__item linkedin -->
                <!-- social__item google+ -->
                <div class="social__item">
                    <a target="_blank" href="https://plus.google.com/u/0/+StevenRoberts-mbh/posts" class="social__icon--googleplus"><i class="icon--googleplus"></i></a>
                </div>
                <!-- /social__item google+ -->
                <!-- social__item dropbox -->
                <div class="social__item">
                    <a target="_blank" href="https://dropbox.com" class="social__icon--dropbox"><i class="icon--dropbox"></i></a>
                </div>
                <!-- /social__item dropbox -->
                <!-- social__item skype -->
                <div class="social__item">
                    <a target="_blank" href="http://skype.com" class="social__icon--skype"><i class="icon--skype"></i></a>
                </div>
                <!-- /social__item skype -->
                <!-- social__item github -->
                <div class="social__item">
                    <a target="_blank" href="https://github.com" class="social__icon--github"><i class="icon--github"></i></a>
                </div>
                <!-- /social__item github -->

            </div>
        </div>
    </div>
</div>




